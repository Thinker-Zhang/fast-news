/**index.wxss**/

.navbar {
  display: flex;
  box-sizing: border-box;
  padding: 10rpx 0;
  font-size: 30rpx;
  color: #eee;
  background-color: #34a0e2;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}

.navbar .item.active {
  font-size: 32rpx;
  color: #fff;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 30rpx;
  height: 5rpx;
  background: #eee;
}

.hot-news {
  position: relative;
  width: 100%;
  height: 460rpx;
}

.hot-news-content {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border: 28rpx solid rgba(255, 255, 255, 0.8);
}

.hot-news-tag {
  position: absolute;
  right: 0;
  top: 0;
  padding: 5rpx 15rpx 8rpx 25rpx;
  border-bottom-left-radius: 20rpx;
  border-top-right-radius: 5rpx;
  background-color: rgb(197, 76, 76);
  font-size: 30rpx;
  color: #fff;
}

.hot-news-title {
  position: absolute;
  left: 30rpx;
  bottom: 60rpx;
  width: 90%;
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.hot-news-bottom {
  position: absolute;
  left: 30rpx;
  bottom: 10rpx;
  display: flex;
  font-size: 28rpx;
  color: #999;
}

.hot-news-source {
  margin-right: 30rpx;
}

.news-list {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0 28rpx;
}

.news-list-item {
  display: flex;
  box-sizing: border-box;
  padding: 28rpx 0;
  justify-content: space-between;
  border-bottom: 2rpx solid #eee;
}

.list-item-left {
  width: 470rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list-item-title {
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list-item-bottom {
  display: flex;
  font-size: 26rpx;
  color: #999;
}

.list-item-source {
  margin-right: 25rpx;
}

.list-item-right {
  width: 200rpx;
  height: 130rpx;
}

.list-item-img {
  width: 200rpx;
  height: 130rpx;
  border-radius: 5rpx;
}
